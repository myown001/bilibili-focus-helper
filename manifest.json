{
  "manifest_version": 3,
  "name": "B站专注学习模式",
  "version": "1.0.0",
  "description": "为B站创建一个专注学习的环境，屏蔽干扰，提升学习效率",
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "B站专注学习模式"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "css": [
        "content/focus-video.css",
        "content/focus-first-time.css"
      ],
      "js": [
        "content/utils.js",
        "content/settings-manager.js",
        "content/first-time-setup.js",
        "content/exit-handler.js",
        "content/focus-mode.js",
        "content/focus-main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/chart.js/dist/chart.umd.js", "popup/daily-stats.js", "popup/daily-stats.css"],
      "matches": ["*://*.bilibili.com/*"]
    }
  ]
}